{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(asctime)s]  %(name)s::%(levelname)s - %(message)s"
    },
    "detailed": {
      "format": "[%(asctime)s] %(levelname)s: %(message)s  <in %(name)s.%(funcName)s:%(lineno)d)>"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "NOTSET",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "console_logs": {
      "class": "walkoff.appgateway.console.ConsoleLoggingHandler",
      "level": "NOTSET",
      "formatter": "simple"
    },
    "file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "NOTSET",
      "formatter": "simple",
      "filename": "./data/log/log.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },
  "loggers": {
    "walkoff": {
      "level": "INFO",
      "handlers": ["file_handler"]
    },
    "apps": {
      "level": "DEBUG",
      "handlers": ["file_handler", "console_logs"]
    },
    "connexion": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "passlib": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "zmq": {
      "level": "INFO",
      "handlers": ["file_handler"]
    },
    "swagger_spec_validator": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "walkoff.appgateway.appcache": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    },
    "walkoff.server.app": {
      "level": "ERROR",
      "handlers": ["file_handler"]
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": ["console"]
  }
}